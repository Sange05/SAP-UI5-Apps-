<mvc:View   xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="ui5.apps.controller.View1"
            xmlns:core="sap.ui.core">

            <Page title="My Fruit Store">

                <headerContent>

                    <Button press="onNext" icon="sap-icon://action"></Button>
                                  
                </headerContent>

                <SearchField search="onSearch" ></SearchField>
                
                <List items="{/fruits}" id="idList">

                    <ObjectListItem intro="{benefit}" title="{name}" number="{price}" numberUnit="{unit}"
                                    icon="{photo}"
                    ></ObjectListItem>

                </List>

            </Page>


</mvc:View>
