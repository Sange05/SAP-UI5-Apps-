<mvc:View   xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
            xmlns:form="sap.ui.layout.form" xmlns:table="sap.ui.table" xmlns:core="sap.ui.core"
            controllerName="ui5.apps.controller.TableView">


    <App>
        <pages>
            <Page title="Employee Personal Data">

                <table:Table rows="{/empTab}" selectionMode="Single" rowSelectionChange="copyDetails">

                    <table:Column >
                        <table:label>
                            <Label text="Emp No."> </Label>
                        </table:label>

                        <table:template>
                            <Text text="{empNo}" > </Text>
                        </table:template>
                    </table:Column>

                    <table:Column >
                        <table:label>
                            <Label text="Emp Name"> </Label>
                        </table:label>

                        <table:template>
                            <Text text="{empName}"> </Text>
                        </table:template>

                    </table:Column>

                    <table:Column >
                        <table:label>
                            <Label text="Age"> </Label>
                        </table:label>

                        <table:template>
                            <Text text="{age}" > </Text>
                        </table:template>

                    </table:Column>

                    <table:Column >
                        <table:label>
                            <Label text="Gender"> </Label>
                        </table:label>

                        <table:template>

                            <Select selectedKey="{gender}">

                                <core:Item key="M" text="Male"></core:Item>
                                <core:Item key="F" text="Female"></core:Item>

                            </Select>

                        </table:template>

                    </table:Column>

                    <table:Column >
                        <table:label>
                            <Label text="Married?"> </Label>
                        </table:label>

                        <table:template>
                           <CheckBox selected="{married}"></CheckBox>
                        </table:template>
                    
                    </table:Column>

                    <table:Column >
                        <table:label>
                            <Label text="Salary"> </Label>
                        </table:label>

                        <table:template>
                            <Input value="{salary}"> </Input>
                        </table:template>
                    
                    </table:Column>

                    <table:Column >
                        <table:label>
                            <Label text="Currency"> </Label>
                        </table:label>

                        <table:template>
                            <Text text="{currCode}"> </Text>
                        </table:template>
                    
                    </table:Column>

                </table:Table>

                <form:SimpleForm title="Add Employee Data" id="idForm" >

                    <Label text="Emp No."></Label>
                    <Input type="Text" value="{empNo}"></Input>

                    <Label text="Emp Name"></Label>
                    <Input type="Text" value="{empName}"></Input>

                    <Label text="Age"></Label>
                    <Input type="Text" value="{age}"></Input>
                    
                    <Label text="Gender"></Label>
                    <Input type="Text" value="{gender}"></Input>
                    
                    <Label text="Married?"></Label>
                    <CheckBox selected="{married}"></CheckBox>
                    
                    <Label text="Salary"></Label>
                    <Input type="Text" value="{salary}"></Input>

                    <Label text="Currency Code"></Label>
                    <Input type="Text" value="{currCode}" ></Input>
            
                    <Button text="Add Details" icon="sap-icon://sys-enter-2" press="addDetails" /> 
                    <Button text="Edit" icon="sap-icon://edit" press="editDetails" /> 
                    
                </form:SimpleForm>

        
            </Page>
        </pages>
    </App>

</mvc:View>

