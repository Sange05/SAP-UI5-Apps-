<form:SimpleForm>

    <form:content>

        <Label text="Username"></Label>
        <Input type="Text" id="name"></Input>

        <Label text="Password"></Label>
        <Input type="Password"  id="pwd"></Input>

        <Button icon="sap-icon://paper-plane" text="Log In" type="Accept" press="onValidate"></Button>

    
    </form:content>

</form:SimpleForm>


</mvc:View>
